<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
xmlns:android="http://schemas.android.com/apk/res/android"
           id="com.ca.apim"
      version="0.1.0">
    <name>MAS</name>
    <description>Cordova MAS Plugin</description>
    <license>CA Technologies Ltd.</license>
    <keywords>cordova, MAS, CA Technologies</keywords>

    <js-module src="www/MASPlugin.js" name="MASPlugin">
        <clobbers target="MASPlugin" />
    </js-module>

    <!-- iOS -->
    <platform name="ios" >
        <config-file target="config.xml" parent="/*" >
            <feature name="com.ca.apim.MASPlugin" >
                <param name="ios-package" value="MASPlugin"/>
            </feature>
        </config-file>
        
        <header-file src="src/ios/MASPlugin.h" />
        <source-file src="src/ios/MASPlugin.m" />
        
    </platform>

    <!-- Android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="com.ca.apim.MASPlugin" >
                <param name="android-package" value="com.ca.apim.MASPlugin"/>
            </feature>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.INTERNET"/>
            <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
            <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/manifest/application">
            <activity android:name="com.ca.mas.core.gui.LogonActivity"
                android:theme="@android:style/Theme.Holo.Light.Dialog"
                android:label="Log On to Example App"
                android:windowSoftInputMode="stateVisible"
                android:exported="false">
                <intent-filter>
                    <action android:name="com.ca.mas.core.service.action.OBTAIN_CREDENTIALS"/>
                    <category android:name="android.intent.category.DEFAULT"/>
                </intent-filter>
            </activity>
            <activity android:name="com.ca.mas.core.gui.SocialLoginActivity"
                android:theme="@android:style/Theme.Holo.Light"
                android:windowSoftInputMode="stateVisible"
                android:exported="false">
            </activity>
            <service android:name="com.ca.mas.core.service.MssoService"
                android:exported="false">
            </service>
        </config-file>

        <source-file src="src/android/MASPlugin.java" target-dir="src/com/ca/apim" />
    </platform>


</plugin>

